@model Petronomica.Models.ConsulDetail

@{
    ViewData["Title"] = "Wish";
}
<a href='javascript:history.go(-1)'>Назад</a>

<h2>Пожелания и предложения</h2>
<div class="container">
    <div class="row">
        <div class="col-md-8 order-md-1">
            <form asp-controller="Misc" asp-action="WishGet" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">Адрес электронной почты</label>
                        <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Введите почту" asp-for="Email" required>
                        <div class="invalid-feedback">
                            Почтовый адрес обязателен для заполнения
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                </div>

                <div class="form-group" style="margin-top:5px;">
                    <label for="comment">Ваше предложение:</label>
                    <textarea class="form-control" rows="5" id="comment" asp-for="Message" required></textarea>
                    <div class="invalid-feedback">
                    </div>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Отправить пожелание</button>
            </form>
        </div>
    </div>
</div>

