@model Petronomica.Models.ConsulDetail
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="container">
    <div class="row">

        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Конструктор диплома</h4>
            <form asp-controller="Services" asp-action="SaveConsul" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">Адрес электронной почты</label>
                        <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Введите почту" asp-for="Email" required>
                        <div class="invalid-feedback">
                            Почтовый адрес обязателен для заполнения
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                </div>
 
                <div class="custom-file" style="margin-top:5px;">
                    <input type="file" class="btn btn-success" multiple="multiple" name="files" id="files" asp-for="YFiles">
                </div>
                <div class="form-group" style="margin-top:5px;">
                    <label for="comment">Дополнительные пожелания:</label>
                    <textarea class="form-control" rows="5" id="comment" asp-for="Message" required></textarea>
                    <div class="invalid-feedback">
                        Почтовый адрес обязателен для заполнения
                    </div>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Отправить заявку</button>
            </form>
        </div>
    </div>
</div>