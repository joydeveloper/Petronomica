@model Petronomica.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Настройки заказа";
}

<h2>Настройки заказа</h2>
<div class="container">
    <div class="row">
        <div class="mb-3 shadow-sm">
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.OrderType)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OrderType)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.OrderDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.OrderStatus)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.OrderStatus)
                </dd>
            </dl>
        </div>
        <div class="mb-3 shadow-sm">
            <form asp-controller="Services" asp-action="SetOrder" method="post" enctype="multipart/form-data">
                <input type="hidden" value="model => model.OrderType" />


                <label for="firstName">Адрес электронной почты</label>
                <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Введите почту" required>
                <div class="invalid-feedback">
                    Почтовый адрес обязателен для заполнения

                </div>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Отправить заявку</button>
            </form>
        </div>
        </div>
            <a asp-action="Index">Витрина</a>
            <h4>Детали</h4>
        </div>
