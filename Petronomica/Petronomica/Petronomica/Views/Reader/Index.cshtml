@model HardCodeData.HardCodeBlog

@{
    ViewData["Title"] = " Reader";
}
<link rel="stylesheet" asp-href-include="~/css/reader.css" asp-append-version="true" />
<script asp-src-include="~/js/site.js" asp-append-version="true"></script>
<h2>@TempData["data"]</h2>

<div class="row">
    <div class="col col-md-9 mb-6 bg-info border-dark">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Меню документов
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item"  href="#">Статьи</a>
                <a class="dropdown-item" href="#">Портфолио</a>
                <a class="dropdown-item" href="#">Договоры</a>
            </div>
        </div>
    </div>
    <div id="descript" class="col col-md-6 mb-3 bg-light border-dark">

    </div>
    <p>"@Model.blogItemContainer.GetActiveObject().Type"</p>
</div>
 <script>
    function Description(msg) {
        document.getElementById("descript").innerHTML = msg;
    }
    (function LoadDescription(path) {
        httpGetAsync("@Model.blogItemContainer.GetActiveObject().Path.Replace("wwwroot","..")", Description);
    }())
function Result(msg) {
    document.getElementById("result").innerHTML = msg;
    document.getElementById("result").scrollIntoView();
}
</script>
